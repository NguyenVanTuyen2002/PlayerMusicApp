<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/frame_dialog_create_playlist"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Playlist"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/edtCreatePlaylist"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/frame_edt_dialog_create"
        android:hint="Enter name..."
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingStart="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="96dp"
            android:layout_height="36dp"
            android:text="Cancel"
            android:textColor="@color/black"
            android:background="@drawable/frame_btn_cancel"
            android:gravity="center"/>

        <TextView
            android:id="@+id/btn_save"
            android:layout_width="96dp"
            android:layout_height="36dp"
            android:text="Save"
            android:textColor="@color/black"
            android:background="@drawable/frame_btn_save"
            android:gravity="center"
            android:layout_marginStart="20dp"/>

    </LinearLayout>
</LinearLayout>